<%= form_tag(imported_data_path, method: :get) do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q, @query) %>
  <%= submit_tag("Search") %>
<% end %>

<%= paginate @users, params: {q: @query} %>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Middle Name</th>
      <th>Encoded Name</th>
      <th>Year</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.first_name %></td>
        <td><%= u.last_name %></td>
        <td><%= u.middle_name %></td>
        <td><%= u.encoded_name %></td>
        <td><%= u.graduated_at.year %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users, params: {q: @query} %>
