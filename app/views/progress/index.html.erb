<div class="progresses">
  <% @items.each do |item| %>
    <div class="progresses-item">
      <%= content_tag(:div, "", id: "progress", class: "progress-element",
                      'data-percentage': item[:value],
                      'data-track-width': "12",
                      'data-track-colour': "555555",
                      'data-fill-colour': "00C0FF",
                      'data-text-colour': "00C0FF",
                      'data-stroke-colour': "FFFFFF",
                      'data-stroke-spacing': "4") %>
      <p><%= item[:title] %></p>
    </div>
  <% end %>
</div>
