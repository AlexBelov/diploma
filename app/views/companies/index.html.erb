<%= form_tag(companies_path, method: :get) do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q, @query) %>
  <%= submit_tag("Search") %>
<% end %>

<%= paginate @companies, params: {q: @query} %>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Website</th>
      <th>Size</th>
      <th>Industry</th>
      <th>Country</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.description %></td>
        <td><%= c.website %></td>
        <td><%= c.company_size %></td>
        <td><%= c.industry %></td>
        <td><%= c.country %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @companies, params: {q: @query} %>
